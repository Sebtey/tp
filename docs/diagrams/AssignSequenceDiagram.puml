@startuml
!include style.puml
skinparam ArrowFontStyle plain

box Logic LOGIC_COLOR_T1
participant ":LogicManager" as LogicManager LOGIC_COLOR
participant ":TaskWiseParser" as TaskWiseParser LOGIC_COLOR
participant ":AssignCommandParser" as AssignCommandParser LOGIC_COLOR
participant "assign:AssignCommand" as AssignCommand LOGIC_COLOR
participant ":CommandResult" as CommandResult LOGIC_COLOR
end box

box Model MODEL_COLOR_T1
participant ":Model" as Model MODEL_COLOR
end box

[-> LogicManager : execute("assign 1 a/John")
activate LogicManager

LogicManager -> TaskWiseParser : parseCommand("assign 1 a/John")
activate TaskWiseParser

create AssignCommandParser
TaskWiseParser -> AssignCommandParser
activate AssignCommandParser

AssignCommandParser --> TaskWiseParser
deactivate AssignCommandParser

TaskWiseParser -> AssignCommandParser : parse("1", ["John"])
activate AssignCommandParser

create AssignCommand
AssignCommandParser -> AssignCommand
activate AssignCommand

AssignCommand --> AssignCommandParser
deactivate AssignCommand

AssignCommandParser --> TaskWiseParser : assign
deactivate AssignCommandParser
'Hidden arrow to position the destroy marker below the end of the activation bar.
AssignCommandParser -[hidden]-> TaskWiseParser
destroy AssignCommandParser

TaskWiseParser --> LogicManager : assign
deactivate TaskWiseParser

LogicManager -> AssignCommand : execute()
activate AssignCommand

AssignCommand -> Model : assignTask(1, "John")
activate Model

Model --> AssignCommand
deactivate Model

create CommandResult
AssignCommand -> CommandResult
activate CommandResult

CommandResult --> AssignCommand
deactivate CommandResult

AssignCommand --> LogicManager : result
deactivate AssignCommand

[<--LogicManager
deactivate LogicManager
@enduml
